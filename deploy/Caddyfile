# Caddy configuration for api.lurus.cn
# Caddy will automatically obtain and renew Let's Encrypt SSL certificates

api.lurus.cn {
    # Reverse proxy to new-api service
    reverse_proxy localhost:3000

    # Enable compression
    encode gzip

    # Logging
    log {
        output file /var/log/caddy/api.lurus.cn.log
    }
}
